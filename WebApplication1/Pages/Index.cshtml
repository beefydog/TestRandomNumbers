@page
@model IndexModel
@{
    ViewData["Title"] = "Lotto Number Set Generator";

}

<div class="text-center">
    <h1>Lotto Number Set Generator</h1>
    <p></p>

    <div class="form-group form-control-sm">

        <p></p>

